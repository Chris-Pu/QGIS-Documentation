msgstr "|radioButtonOn| :guilabel:`Offset dal centroide`,"

#: ../../source/docs/user_manual/working_with_vector/vector_properties.rst:1364
msgid "|radioButtonOff| :guilabel:`Horizontal (slow)`,"
msgstr "|radioButtonOff| :guilabel:`Orizzontale (lento)`,"

#: ../../source/docs/user_manual/working_with_vector/vector_properties.rst:1365
msgid "|radioButtonOff| :guilabel:`Around centroid`,"
msgstr "|radioButtonOff| :guilabel:`Attorno al centroide`,"

#: ../../source/docs/user_manual/working_with_vector/vector_properties.rst:1366
msgid "|radioButtonOff| :guilabel:`Free (slow)`,"
msgstr "|radioButtonOff| :guilabel:`Libero (lento)`,"

